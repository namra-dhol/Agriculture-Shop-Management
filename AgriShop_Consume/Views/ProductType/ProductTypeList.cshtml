@model IEnumerable<AgriShop_Consume.Models.ProductTypeModel>

@{
    ViewData["Title"] = "Product Type List";
}
<div class="main" id="main">

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Product Type List</h2>
    <a class="btn btn-primary" asp-action="AddEdit">
        <i class="bi bi-plus-circle"></i> Add Product Type
    </a>
</div>

<!-- Search Form -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="ProductTypeList" class="row g-3">
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" 
                           class="form-control" 
                           name="typeName" 
                           value="@ViewBag.SearchTerm" 
                           placeholder="Search by product type name...">
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i> Search
                    </button>
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <a asp-action="ProductTypeList" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Clear
                        </a>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Results Info -->
@if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> 
        Showing results for: <strong>"@ViewBag.SearchTerm"</strong>
        @if (Model.Any())
        {
            <span class="ms-2">(@Model.Count() result(s) found)</span>
        }
    </div>
}
<!-- Results Table -->
@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Type Name</th>
                    <th>User ID</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var productType in Model)
                {
                    <tr>
                        <td>@productType.ProductTypeId</td>
                        <td>
                            <span class="fw-medium">@productType.TypeName</span>
                        </td>
                        <td>@productType.UserId</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-warning" 
                                   asp-action="AddEdit" 
                                   asp-route-id="@productType.ProductTypeId"
                                   title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-danger" 
                                   asp-action="Delete" 
                                   asp-route-id="@productType.ProductTypeId" 
                                   onclick="return confirm('Are you sure you want to delete this product type?');"
                                   title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <h4 class="text-muted mt-3">No Product Types Found</h4>
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <p class="text-muted">No product types match your search criteria.</p>
            <a asp-action="ProductTypeList" class="btn btn-primary">
                <i class="bi bi-arrow-left"></i> View All Product Types
            </a>
        }
        else
        {
            <p class="text-muted">Get started by adding your first product type.</p>
            <a asp-action="AddEdit" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Product Type
            </a>
        }
    </div>
} 
</div>