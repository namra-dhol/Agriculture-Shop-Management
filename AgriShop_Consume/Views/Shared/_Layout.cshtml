@using AgriShop_Consume.Helper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriShop_Consume</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriShop_Consume.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #22c55e;
            --secondary-color: #f8f9fa;
        }
        .bg-primary-custom {
            background-color: var(--primary-color) !important;
        }
        .text-primary-custom {
            color: var(--primary-color) !important;
        }
        .feature-icon {
            width: 48px;
            height: 48px;
            color: var(--primary-color);
        }
        .btn-primary-custom {
            background-color: var(--primary-color) !important;
            border-color: var(--primary-color) !important;
            color: white !important;
        }
        .btn-primary-custom:hover {
            background-color: #16a34a !important;
            border-color: #16a34a !important;
            color: white !important;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <!-- Top Bar -->
        <div class="bg-primary-custom text-white py-2">
            <div class="container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-12 col-md-auto mb-2 mb-md-0 d-flex flex-wrap gap-3 justify-content-center justify-content-md-start">
                        <div class="d-flex align-items-center gap-1">
                            <i class="bi bi-telephone"></i>
                            <span>+91 9876543210</span>
                        </div>
                        <div class="d-flex align-items-center gap-1">
                            <i class="bi bi-geo-alt"></i>
                            <span>Free Delivery Available</span>
                        </div>
                    </div>
                    <div class="col-12 col-md-auto d-flex justify-content-center justify-content-md-end gap-3">
                        <span>Track Your Order</span>
                        <span>Help & Support</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- Main Header -->
        <div class="bg-white border-bottom">
            <div class="container py-3">
                <div class="row align-items-center g-2">
                    <div class="col-12 col-md-auto text-center text-md-start mb-2 mb-md-0">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                            <div class="h3 mb-0 text-primary-custom fw-bold">🌾 AgriMart</div>
                        </a>
                    </div>
                    <div class="col-12 col-md d-flex justify-content-center mb-2 mb-md-0">
                        <form class="w-100" role="search">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-search"></i></span>
                                <input type="text" class="form-control" placeholder="Search for seeds, fertilizers, tools...">
                                <button class="btn bg-primary-custom text-white" type="submit">Search</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-12 col-md-auto d-flex justify-content-center justify-content-md-end gap-2">
                        <div id="userSection">
                            <!-- Show based on cookie auth server-side (no JS dependency) -->
                            @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center gap-2 w-100 w-md-auto mb-2 mb-md-0" type="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-person-circle"></i>
                                        <span class="d-none d-md-inline">@User.Identity.Name</span>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><span class="dropdown-item-text text-muted">Role: @User.FindFirst("http://schemas.microsoft.com/ws/2008/06/identity/claims/role")?.Value</span></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Login" asp-action="Logout" method="post" class="px-3 py-1">
                                                <button type="submit" class="btn btn-link dropdown-item"><i class="bi bi-box-arrow-right"></i> Logout</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex gap-2" id="fallbackButtons">
                                    <a asp-controller="Login" asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 w-100 w-md-auto mb-2 mb-md-0">
                                        <i class="bi bi-box-arrow-in-right"></i>
                                        <span class="d-none d-md-inline">Login</span>
                                    </a>
                                    <a asp-controller="Register" asp-action="Index" class="btn btn-primary-custom d-flex align-items-center gap-2 w-100 w-md-auto mb-2 mb-md-0">
                                        <i class="bi bi-person-plus"></i>
                                        <span class="d-none d-md-inline">Register</span>
                                    </a>
                                </div>
                            }
                        </div>
                       @*  <button class="btn btn-outline-secondary d-flex align-items-center gap-2 position-relative w-100 w-md-auto">
                            <i class="bi bi-cart"></i>
                            <span class="d-none d-md-inline">Cart</span>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span>
                        </button> *@
                    </div>
                </div>
            </div>
        </div>
        <!-- Navigation (Responsive Navbar) -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-lg-3">
                        @if(TokenManager.IsAdmin){
                            <li class="nav-item">
                                <a asp-controller="Product" asp-action="ProductList" class="nav-link">Product</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="UserList" class="nav-link">User</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Supplier" asp-action="SupplierList" class="nav-link">Supplier</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="ProductType" asp-action="ProductTypeList" class="nav-link">Product Type</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="ProductVariant" asp-action="ProductVariantList" class="nav-link">Product Variant</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Dashboard" asp-action="Index" class="nav-link">Dashboard</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a asp-controller="Product" asp-action="FertilizersAndChemicals" class="nav-link">
                                Fertilizers & Chemicals
                            </a>
                        </li>
                        <li class="nav-item"><a asp-controller="Product" asp-action="FarmTools" class="nav-link">Farm Tools & Equipment</a></li>
                        <li class="nav-item"><a asp-controller="Product" asp-action="Irrigation" class="nav-link">Irrigation</a></li>
                        <li class="nav-item"><a asp-controller="Product" asp-action="Pesticides" class="nav-link">Pesticides</a></li>
                        <li class="nav-item"><a asp-controller="Product" asp-action="GardenCare" class="nav-link">Garden Care</a></li>
                    </ul>
                  @*   <ul class="navbar-nav ms-auto gap-lg-3">
                        <li class="nav-item"><span class="nav-link text-danger fw-medium">Special Offers</span></li>
                        <li class="nav-item"><span class="nav-link text-muted">Bulk Orders</span></li>
                    </ul> *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Footer -->
    <footer class="bg-light pt-5 pb-3 mt-5 border-top">
        <div class="container">
            <div class="row gy-4">
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="h4 text-primary-custom fw-bold mb-3">🌾 AgriMart</div>
                    <p class="text-muted mb-4">
                        Your trusted partner for all agricultural needs. Quality products, expert advice,
                        and reliable service for farmers across India.
                    </p>
                    <div class="d-flex gap-3">
                        <i class="bi bi-facebook text-muted"></i>
                        <i class="bi bi-twitter text-muted"></i>
                        <i class="bi bi-instagram text-muted"></i>
                        <i class="bi bi-youtube text-muted"></i>
                    </div>
                </div>
                <div class="col-6 col-md-6 col-lg-3">
                    <h5 class="fw-semibold mb-3">Product Categories</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Seeds & Saplings</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Fertilizers</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Pesticides</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Farm Tools</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Irrigation Equipment</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Garden Care</a></li>
                    </ul>
                </div>
                <div class="col-6 col-md-6 col-lg-3">
                    <h5 class="fw-semibold mb-3">Customer Service</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Contact Us</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Track Your Order</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Return Policy</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Shipping Info</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">FAQs</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Bulk Orders</a></li>
                    </ul>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <h5 class="fw-semibold mb-3">Contact Information</h5>
                    <div class="mb-3">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <i class="bi bi-telephone text-primary-custom"></i>
                            <span class="text-muted">+91 9876543210</span>
                        </div>
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <i class="bi bi-envelope text-primary-custom"></i>
                            <span class="text-muted">support@agrimart.com</span>
                        </div>
                        <div class="d-flex align-items-start gap-2">
                            <i class="bi bi-geo-alt text-primary-custom"></i>
                            <span class="text-muted">123 Agriculture Hub,<br>Farm District, Mumbai - 400001</span>
                        </div>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded">
                        <p class="text-primary-custom fw-medium mb-1">24/7 Customer Support</p>
                        <p class="text-muted small mb-0">Always here to help farmers</p>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-8 text-center text-md-start mb-2 mb-md-0">
                    <p class="text-muted mb-0">
                        © 2024 AgriMart. All rights reserved. | Agriculture Solutions for Modern Farmers
                    </p>
                </div>
                <div class="col-md-4 text-center text-md-end">
                    <div class="d-flex gap-3 justify-content-center justify-content-md-end">
                        <a href="#" class="text-muted text-decoration-none small">Privacy Policy</a>
                        <a href="#" class="text-muted text-decoration-none small">Terms of Service</a>
                        <a href="#" class="text-muted text-decoration-none small">Sitemap</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Only one Bootstrap JS, and it should be after all HTML -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        function viewProfile() {
            alert('Profile feature coming soon!');
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
