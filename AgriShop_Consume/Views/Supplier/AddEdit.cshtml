@model AgriShop_Consume.Models.SupplierModel

@{
    ViewData["Title"] = Model.SupplierId > 0 ? "Edit Supplier" : "Add Supplier";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddEdit" method="post">
    @if (Model.SupplierId > 0)
    {
        <input type="hidden" asp-for="SupplierId" />
    }
    <div class="mb-3">
        <label asp-for="SupplierName" class="form-label"></label>
        <input asp-for="SupplierName" class="form-control" />
        <span asp-validation-for="SupplierName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Contact" class="form-label"></label>
        <input asp-for="Contact" class="form-control" />
        <span asp-validation-for="Contact" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UserId" class="form-label"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="SupplierList" class="btn btn-secondary">Cancel</a>
</form> 