@model IEnumerable<AgriShop_Consume.Models.SupplierModel>

@{
    ViewData["Title"] = "Supplier List";
}

<h2>Supplier List</h2>
<a class="btn btn-primary mb-2" asp-action="AddEdit">Add Supplier</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>SupplierId</th>
            <th>SupplierName</th>
            <th>Contact</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.SupplierId</td>
                <td>@supplier.SupplierName</td>
                <td>@supplier.Contact</td>
                <td>@supplier.Address</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="AddEdit" asp-route-id="@supplier.SupplierId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@supplier.SupplierId" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 