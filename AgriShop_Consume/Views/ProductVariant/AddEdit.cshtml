@model AgriShop_Consume.Models.ProductVariantModel

@{
    ViewData["Title"] = Model.VariantId > 0 ? "Edit Product Variant" : "Add Product Variant";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddEdit" method="post">
    @if (Model.VariantId > 0)
    {
        <input type="hidden" asp-for="VariantId" />
    }
    <div class="mb-3">
        <label asp-for="ProductId" class="form-label"></label>
        <input asp-for="ProductId" class="form-control" />
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Size" class="form-label"></label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UserId" class="form-label"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="ProductVariantList" class="btn btn-secondary">Cancel</a>
</form> 