<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <!-- #title metadata and png logo/facicon -->

    <title>Agri shop Consume </title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="~/images/Movie_Mine.png" />

    <meta name="description" content="Movie Mine - A sleek and fast movie ticket booking platform for all your cinema needs." />
    <meta name="keywords" content="movie, booking, cinema, ticket, showtime, MovieMine, Theatre" />
    <link href="~/css/ToastMessage.css" rel="stylesheet" />

<!-- #endregion -->
    

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false) 
</head>


<body style="background: url('@Url.Content("~/images/Login_bg.jpg")') no-repeat center center fixed; background-size: cover;">

    <div class="bg-dark bg-opacity-75 min-vh-100 d-flex justify-content-center align-items-center">
        <div class="container">
            @RenderBody()
        </div>
    </div>
    @if (TempData.Peek("Success") != null || TempData.Peek("Error") != null)
    {
        <div class="toast-container">
            @if (TempData.Peek("Success") != null)
            {
                <div class="toast-message toast-success">
                    @TempData["Success"]
                    <button onclick="this.parentElement.style.display='none'">✖</button>
                </div>
            }
            @if (TempData.Peek("Error") != null)
            {
                <div class="toast-message toast-error">
                    @TempData["Error"]
                    <button onclick="this.parentElement.style.display='none'">✖</button>
                </div>
            }
        </div>
    }

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>
