<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriShop_Consume</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriShop_Consume.styles.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #22c55e;
            --secondary-color: #f8f9fa;
        }

        .bg-primary-custom {
            background-color: var(--primary-color) !important;
        }

        .text-primary-custom {
            color: var(--primary-color) !important;
        }

        .category-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .category-card img {
            transition: transform 0.3s ease;
        }

        .category-card:hover img {
            transform: scale(1.1);
        }

        .product-card {
            transition: box-shadow 0.3s ease;
        }

        .product-card:hover {
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .star-rating {
            color: #ffc107;
        }

        .hero-section {
            background: linear-gradient(135deg, rgba(34, 197, 94, 0.1) 0%, rgba(34, 197, 94, 0.2) 100%);
        }

        .feature-icon {
            width: 48px;
            height: 48px;
            color: var(--primary-color);
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <!-- Top Bar -->
        <div class="bg-primary-custom text-white py-2">
            <div class="container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-auto">
                        <div class="d-flex gap-4">
                            <div class="d-flex align-items-center gap-1">
                                <i class="bi bi-telephone"></i>
                                <span>+91 9876543210</span>
                            </div>
                            <div class="d-flex align-items-center gap-1">
                                <i class="bi bi-geo-alt"></i>
                                <span>Free Delivery Available</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto d-none d-md-block">
                        <div class="d-flex gap-4">
                            <span>Track Your Order</span>
                            <span>Help & Support</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Header -->
        <div class="bg-white border-bottom">
            <div class="container py-3">
                <div class="row align-items-center">
                    <div class="col-auto">
                  <a asp-controller="Home" asp-action="Index">
                            <div class="h3 mb-0 text-primary-custom fw-bold">
                                🌾 AgriMart
                            </div>
                  </a>                  
                    </div>
                    <div class="col">
                        <div class="input-group mx-3">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control" placeholder="Search for seeds, fertilizers, tools...">
                            <button class="btn bg-primary-custom text-white">Search</button>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="d-flex gap-3">
                            <button class="btn btn-outline-secondary d-flex align-items-center gap-2">
                                <i class="bi bi-person"></i>
                                <span class="d-none d-md-inline">Account</span>
                            </button>
                            <button class="btn btn-outline-secondary d-flex align-items-center gap-2 position-relative">
                                <i class="bi bi-cart"></i>
                                <span class="d-none d-md-inline">Cart</span>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="bg-light">
            <div class="container">
                <div class="row justify-content-between align-items-center py-2">
                    <div class="col">
                        <div class="d-none d-md-flex gap-4">
                            <a asp-controller="Product" asp-action="ProductList" class="text-decoration-none text-dark fw-medium"> Product </a>
                            <a asp-controller="User" asp-action="UserList" class="text-decoration-none text-dark fw-medium"> User </a>
                            <a href="#" class="text-decoration-none text-dark fw-medium">Fertilizers & Chemicals</a>
                            <a href="#" class="text-decoration-none text-dark fw-medium">Farm Tools & Equipment</a>
                            <a href="#" class="text-decoration-none text-dark fw-medium">Irrigation</a>
                            <a href="#" class="text-decoration-none text-dark fw-medium">Pesticides</a>
                            <a href="#" class="text-decoration-none text-dark fw-medium">Garden Care</a>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="d-flex gap-4">
                            <span class="text-danger fw-medium">Special Offers</span>
                            <span class="text-muted">Bulk Orders</span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-light py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="h4 text-primary-custom fw-bold mb-3">🌾 AgriMart</div>
                    <p class="text-muted mb-4">
                        Your trusted partner for all agricultural needs. Quality products, expert advice,
                        and reliable service for farmers across India.
                    </p>
                    <div class="d-flex gap-3">
                        <i class="bi bi-facebook text-muted"></i>
                        <i class="bi bi-twitter text-muted"></i>
                        <i class="bi bi-instagram text-muted"></i>
                        <i class="bi bi-youtube text-muted"></i>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="fw-semibold mb-3">Product Categories</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Seeds & Saplings</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Fertilizers</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Pesticides</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Farm Tools</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Irrigation Equipment</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Garden Care</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="fw-semibold mb-3">Customer Service</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Contact Us</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Track Your Order</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Return Policy</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Shipping Info</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">FAQs</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none">Bulk Orders</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="fw-semibold mb-3">Contact Information</h5>
                    <div class="mb-3">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <i class="bi bi-telephone text-primary-custom"></i>
                            <span class="text-muted">+91 9876543210</span>
                        </div>
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <i class="bi bi-envelope text-primary-custom"></i>
                            <span class="text-muted">support@agrimart.com</span>
                        </div>
                        <div class="d-flex align-items-start gap-2">
                            <i class="bi bi-geo-alt text-primary-custom"></i>
                            <span class="text-muted">123 Agriculture Hub,<br>Farm District, Mumbai - 400001</span>
                        </div>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded">
                        <p class="text-primary-custom fw-medium mb-1">24/7 Customer Support</p>
                        <p class="text-muted small mb-0">Always here to help farmers</p>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <p class="text-muted mb-0">
                        © 2024 AgriMart. All rights reserved. | Agriculture Solutions for Modern Farmers
                    </p>
                </div>
                <div class="col-md-4 text-md-end">
                    <div class="d-flex gap-3 justify-content-md-end">
                        <a href="#" class="text-muted text-decoration-none small">Privacy Policy</a>
                        <a href="#" class="text-muted text-decoration-none small">Terms of Service</a>
                        <a href="#" class="text-muted text-decoration-none small">Sitemap</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
