@model List<AgriShop_Consume.Models.UserModel>

@{
    ViewData["Title"] = "User List";
}
<main class="main" id="main">

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0">User List</h2>
        </div>

        <div class="col-2">
            <a class="btn btn-primary my-3" asp-controller="User" asp-action="AddEdit">Add User</a>
        </div>

        <table class="table table-bordered table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Role</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserId</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>
                            <td>@item.Role</td>
                            <td>
                                <a asp-action="AddEdit" asp-controller="User" asp-route-id="@item.UserId" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Delete" asp-controller="User" asp-route-id="@item.UserId" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">No Users found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</main>